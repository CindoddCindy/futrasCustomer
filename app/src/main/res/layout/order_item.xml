<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_order_item"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        app:cardMaxElevation="5dp">


        <LinearLayout
            android:background="#232740"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_order_nama_penjual"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="#BFBABA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Penjual "
                    />



                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="5dp"

                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/example_image">

                </de.hdodenhof.circleimageview.CircleImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_order_hapus"
                    android:drawableRight="@drawable/ic_baseline_more_horiz_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:shadowColor="#F0F5F6"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            android:text="Tanggal Order"
                            android:textColor="#EDE5E5"
                            android:textSize="12dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_order_tanggal_post"
                            android:layout_weight="1"
                            android:shadowColor="#F0F5F6"
                            android:shadowRadius="2"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:textColor="#EDE5E5"
                            android:text="Tanggal Order"
                            android:gravity="center"
                            android:textStyle="normal"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        </TextView>


                    </LinearLayout>

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/garis">


                    </ImageView>




                </LinearLayout>




                <LinearLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:padding="5dp"
                            android:id="@+id/tv_order_nama_makanan"
                            android:textSize="12dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_local_dining_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Makanan "
                            />
                        <TextView
                            android:padding="5dp"
                            android:id="@+id/tv_order_lokasi_makanan"
                            android:textSize="12dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Makanan "
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_order_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_baseline_phone_24"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="Phone "
                            android:textColor="#BFBABA"
                            android:textSize="12dp" />
                        <TextView
                            android:padding="5dp"
                            android:id="@+id/tv_order_harga"
                            android:textSize="12dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga Makanan"
                            />



                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>